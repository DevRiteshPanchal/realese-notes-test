{
	"skip-github-pull-request": true,
	"bump-minor-pre-major": true,
	"bump-patch-for-minor-pre-major": true,
	"release-type": "node",
	"include-v-in-tag": true,
	"packages": {
		".": {}
	},
	"pull-request-title-pattern": "Prepare release: v${version}",
	"pull-request-header": "**Release:** v${version}",
	"pull-request-footer": "**Changelog:** ${changelogUrl}"
}
